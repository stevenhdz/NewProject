@model WebApplication2.Models.Registro

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Registro</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="accordion" id="accordionExample">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h2 class="mb-0">
                            <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Llenar datos cliente
                            </button>
                        </h2>
                    </div>

                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group"> 
                                        <input asp-for="Nombre" placeholder="Nombre" class="form-control" />
                                        <span asp-validation-for="Nombre" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <input asp-for="Apellido" placeholder="Apellido" class="form-control" />
                                        <span asp-validation-for="Apellido" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <input asp-for="Numero" placeholder="Celular o Fijo" class="form-control" />
                                        <span asp-validation-for="Numero" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input asp-for="Direccion" placeholder="Direccion" class="form-control" />
                                        <span asp-validation-for="Direccion" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input asp-for="Correo" placeholder="Correo" class="form-control" />
                                        <span asp-validation-for="Correo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" id="headingTwo">
                        <h2 class="mb-0">
                            <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Llenar datos equipo
                            </button>
                        </h2>
                    </div>
                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <input asp-for="CantidadEquipos" placeholder="Cantidad Equipos" class="form-control" />
                                        <span asp-validation-for="CantidadEquipos" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <select asp-for="Marca" class="form-control" asp-items="ViewBag.Marca">
                                            <option value="" selected disabled hidden>Seleccionar Marca</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <select asp-for="Modelo" class="form-control" asp-items="ViewBag.Modelo">
                                            <option value="" selected disabled hidden>Seleccionar Modelo</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <textarea asp-for="Descripcion" class="form-control" rows="6" placeholder="Descripcion" autocomplete="off" aria-label="With textarea"></textarea>
                                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <textarea asp-for="Seriales" class="form-control" rows="6" placeholder="Ingrese serial" autocomplete="off" aria-label="With textarea"></textarea>
                                        <span asp-validation-for="Seriales" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header" id="headingThree">
                        <h2 class="mb-0">
                            <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Registro Servicio
                            </button>
                        </h2>
                    </div>
                    <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <select asp-for="Garantia" class="form-control" asp-items="ViewBag.Garantia">
                                            <option value="" selected disabled hidden>Garantia</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <select asp-for="NombreTecnico" class="form-control" asp-items="ViewBag.NombreTecnico">
                                            <option value="" selected disabled hidden>Analista</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <select asp-for="Categoria" class="form-control" asp-items="ViewBag.Categoria">
                                            <option value="" selected disabled hidden>Seleccione servicio</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="Datos" /> <p>Acepto las Condiciones del servicio y la Politica de privacidad de SLTECHNOLOGY</p>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                                            <input class="form-check-input" placeholder="Nada" asp-for="ProfilePicture" />
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" data-toggle="tooltip" data-placement="bottom" title="Antes de ingresar asegurate de que todos los campos esten llenos" value="Ingresar" class="btn btn-sm btn-primary rounded-0 text-uppercase" />
                <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i>Atras</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
